{
    "name": "mlm/mlm-core",
    "description": "Simple mlm-core lib",
    "type": "library",
    "license": "mit",
    "authors": [
        {
            "name": "Aleksey Gukai",
            "email": "exxxar@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "symfony/http-client": "^5.2",
        "ext-json": "*"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mlm\\MlmCore\\MlmCoreServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",

    "autoload": {
        "classmap": [
            "src/",
            "src/classes/",
            "src/config/",
            "src/controllers/",
            "src/errors/",
            "src/events/",
            "src/providers/",
            "src/listeners/",
            "src/interfaces/",
            "src/forms/",
            "src/middleware/",
            "src/migrations/",
            "src/models/",
            "src/requests/",
            "src/resources/"
        ]
    }
}
